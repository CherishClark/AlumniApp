<div class="container">
  <div class="card">
    <p id="notice"><%= notice %></p>

    <p>
      <h4>Ranking: <%= @post.ranking %></h4>
    </p>

    <h4>Topic:</h4>
    <p>
      <%= @post.topic %>
    </p>

    <h4>Post:</h4>
    <p>
      <%= markdown @post.body %>
    </p>

    <p>
      <%= @post.images %>
    </p>
  </div>
</div>


<div class="container">
  <h4>Comments:</h4>
    <%= render 'comments/comment_form' %>
</div>

<div id="comments" data-post-id='<%= @post.id %>'>
  <%= render @post.comments %>
</div>

<%= link_to 'Back', posts_path %>



