<div class="container">

  <p id="notice"><%= notice %></p>


<table>
  <thead>
    <tr>
      <th>Upvotes</th>  
      <th>Downvotes</th>
      <th>Topic</th>
      <th>Body</th>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>


    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>  
          <%=link_to like_post_path(post), method: :put, class: 'btn btn-default btn-sm' do %>   <span class="glyphicon glyphicon-chevron-up"></span>
           like <%=post.get_upvotes.size%>
            <% end %>
        </td>
        <td> 
          <%=link_to dislike_post_path(post), method: :put, class: 'btn btn-default btn-sm' do %>
           <span class="glyphicon glyphicon-chevron-down"></span>
           dislike <%=post.get_downvotes.size%></td>
          <%end%>
        </td>
          <td><%= post.topic %></td>
          <td><%= post.body %></td>
          <td><%= post.images %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post', new_post_path %>
</div>
