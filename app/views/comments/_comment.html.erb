<div class='comment-card'>
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-2">
          <div id="comments" data-post-id="<%= @post.id %>">
            <%= render @post.comments %>
          </div>
        </div>

        <div class="col-md-10">
          <%= @comment.content %>
          <%= render @post.comments %>
        </div>
      </div>
    </div>
  </div>
</div>