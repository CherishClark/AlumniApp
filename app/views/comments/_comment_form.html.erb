<%= form_for @comment, url: '#' do |f| %>
  <div class="form-group">
    <%= f.text_area :content, id: :comment_content, class: 'form-control', rows: 7, placeholder: 'Your comment here' %>
  </div> 

  <div class="form-group">
  	<%= f.submit 'Post Comment', class: 'btn btn-primary' %>
  </div>
<% end %>
